@page "account preferences"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Input.ProfilePicture)}")" 
     style="width: 200px;"
     class="rounded mx-auto d-block"
     alt="ProfilePicture"/>   
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div class="card">
                <div class="card-title">
                    <div class="card-header">
                        <h3>Profile Username</h3>
                    </div>
                </div>
                <div class="card-body">
                    <input asp-for="Input.ProfileUsername" class="form-control"
                        placeholder="@Model.Input.ProfileUsername" />
                    <span asp-validation-for="Input.ProfileUsername" class="text-danger"></span>
                </div>
            </div>
            <br>
            <div class="card">
                <div class="card-title">
                    <div class="card-header">
                        <h3>Profile Bio</h3>
                    </div>
                </div>
                <div class="card-body">
                    <input asp-for="Input.ProfileBio" class="form-control"
                        placeholder="@Model.Input.ProfileBio" />
                    <span asp-validation-for="Input.ProfileBio" class="text-danger"></span>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
